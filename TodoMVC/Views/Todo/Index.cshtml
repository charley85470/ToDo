
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Template • TodoMVC</title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link href="~/Content/Todo/base.css" rel="stylesheet" />
    <link href="~/Content/Todo/index.css" rel="stylesheet" />
</head>
<body>
    <section class="todoapp" id="app">
        <header class="header">
            <h1>todos</h1>
            <input class="new-todo" placeholder="What needs to be done?" autofocus>
        </header>
        <!-- This section should be hidden by default and shown when there are todos -->
        <section class="main">
            <input class="toggle-all" type="checkbox">
            <label for="toggle-all">Mark all as complete</label>
            <ul id="todoList" class="todo-list">
                <!-- These are here just to show the structure of the list items -->
                <!-- List items should get the class `editing` when editing and `completed` when marked as completed -->
                <li class="completed">
                    <div class="view">
                        <input class="toggle" type="checkbox" checked>
                        <label>Taste JavaScript</label>
                        <button class="destroy"></button>
                    </div>
                    <input class="edit" value="Create a TodoMVC template">
                </li>
                <li>
                    <div class="view">
                        <input class="toggle" type="checkbox">
                        <label>Buy a unicorn</label>
                        <button class="destroy"></button>
                    </div>
                    <input class="edit" value="Rule the web">
                </li>
            </ul>
        </section>
        <!-- This footer should hidden by default and shown when there are todos -->
        <footer class="footer">
            <!-- This should be `0 items left` by default -->
            <span class="todo-count"><strong>0</strong> item left</span>
            <!-- Remove this if you don't implement routing -->
            <ul class="filters">
                <li>
                    <a class="selected" href="#/" onclick="GetData(getDataUrl, null)">All</a>
                </li>
                <li>
                    <a href="#/active" onclick="GetData(getDataUrl, false)">Active</a>
                </li>
                <li>
                    <a href="#/completed" onclick="GetData(getDataUrl, true)">Completed</a>
                </li>
            </ul>
            <!-- Hidden if no completed items are left ↓ -->
            <button class="clear-completed">Clear completed</button>
        </footer>
    </section>
    <footer class="info">
        <p>Double-click to edit a todo</p>
        <!-- Remove the below line ↓ -->
        <p>Template by <a href="http://sindresorhus.com">Sindre Sorhus</a></p>
        <!-- Change this out with your name and url ↓ -->
        <p>Created by <a href="http://todomvc.com">you</a></p>
        <p>Part of <a href="http://todomvc.com">TodoMVC</a></p>
    </footer>
    <script>
        $(function () {
            GetData(getDataUrl, null);


        });

        var getDataUrl = '@Url.Action("GetTodos", "Todo")';
        function GetData(url, status) {
            $.ajax({
                url: url,
                data: { status: status },
                success: function (result) {
                    RefreshList(result);
                }
            });
        };

        function RefreshList(data) {
            var todoList = $("#todoList");
            todoList.empty();
            data.forEach(function (value, index) {
                var checked = value.IsComplete === true ? "checked" : "";
                var content = value.Content;
                var style = value.IsComplete === true ? "completed" : "";
                todoList.append('<li class="' + style + '">\
                                   <div class="view" >\
                                     <input type="hidden" value="'+ value._id +'">\
                                     <input class="toggle" type="checkbox" ' + checked + '>\
                                     <label>' + content + '</label>\
                                     <button class="destroy" onclick="Remove('+ value._id +')"></button>\
                                   </div>\
                                   <input class="edit" value="Create a TodoMVC template">\
                                 </li>');
            });
        }

        var removeUrl = '@Url.Action("Delete", "Todo")';
        function Remove(_id) {
            $.ajax({
                url: removeUrl,
                data: { _id: _id },
                success: function (result) {
                    RefreshList(result);
                }
            });
        }
    </script>
</body>
</html>
